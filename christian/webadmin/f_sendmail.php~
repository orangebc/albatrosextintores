<?php
  function M_sathla_A($G_sathla){
$correo_approved=$G_sathla;
$titulo = 'Tu compra ha sido aprobada';

$mensaje ="Tu compra ha sido aprobada, mantente en contacto con nosotros"; 

// Para enviar un correo HTML, debe establecerse la cabecera Content-type
$cabeceras  = 'MIME-Version: 1.0' . "\r\n";
$cabeceras .= 'Content-type: text/html; charset=UTF-8' . "\r\n";
// Cabeceras adicionales
$cabeceras .= 'From: Albatros <no-reply@albatrosextintores.com.mx>' . "\r\n";
$cabeceras .= 'Compra Aprobada' . "\r\n";
// Enviarlo
mail($correo_approved, $titulo, $mensaje, $cabeceras);
printf("<div class='Xnotice'>Correo enviado correctamente A</div>");
    
                              }

  function M_sathla_R($G_sathla){
$correo_approved=$G_sathla;
$titulo = 'Tu compra ha sido Rechazada';

$mensaje ="Tu compra ha sido rechazada, las razones pueden ser:
            <ul>
                 <li> Hay una incongruencia en el pago </li>
                 <li> Hay un reporte de abuso en su cuenta </li>
            </ul>"; 
// Para enviar un correo HTML, debe establecerse la cabecera Content-type
$cabeceras  = 'MIME-Version: 1.0' . "\r\n";
$cabeceras .= 'Content-type: text/html; charset=UTF-8' . "\r\n";
// Cabeceras adicionales
$cabeceras .= 'From: Albatros <no-reply@albatrosextintores.com.mx>' . "\r\n";
$cabeceras .= 'Compra rechazada' . "\r\n";
// Enviarlo
mail($correo_approved, $titulo, $mensaje, $cabeceras);
printf("<div class='Xnotice' style='overflow:auto; width:250px; height:250px; background-color:#006b6b;'>Notificacion enviada</div>");
                              }

